<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	">

	<import resource="../config/context.xml" />
	<import resource="../config/database.xml" />

	<bean id="itemProcessor" class="com.mycom.myapp.CustomItemProcessor" />

	<bean id="reader" class="com.mycom.myapp.ExampleItemReader"
		scope="step">
	</bean>
	<bean id="writer" class="com.mycom.myapp.ExampleItemWriter"
		scope="step">
	</bean>


	<batch:job id="helloWorldJob">
		<batch:step id="step1">

			<batch:tasklet transaction-manager="transactionManager">

				<batch:chunk reader="reader" processor="itemProcessor"
					writer="writer" commit-interval="1" />

			</batch:tasklet>

		</batch:step>
	</batch:job>

</beans>